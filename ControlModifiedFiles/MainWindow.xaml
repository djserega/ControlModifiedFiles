<Window x:Class="ControlModifiedFiles.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:ControlModifiedFiles" mc:Ignorable="d"
        x:Name="MainForm" Title="Контроль изменения файлов" Height="350" Width="600"
        Loaded="MainWindow_Loaded">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem x:Name="miAddFile" Header="Добавить файл" Height="25" Click="MiAddFile_Click"/>
            <MenuItem x:Name="miDeleteFile" Header="Отменить контроль" Height="25" Click="MiDeleteFile_Click"/>
            <Separator Width="10"/>
            <MenuItem x:Name="miSaveTable" Header="Сохранить таблицу" Height="25" Click="MiSaveTable_Click"/>
            <MenuItem x:Name="miLoadTable" Header="Восстановить таблицу" Height="25" Click="MiLoadTable_Click"/>
            <Separator Width="10"/>
            <MenuItem x:Name="miSettings" Header="Настройки" Height="25" Click="MiSettings_Click"/>
        </Menu> 
        <DataGrid x:Name="dgList" Margin="0,25,0,0" AutoGenerateColumns="True" CanUserAddRows="False" SelectionMode="Single" CurrentCellChanged="DgList_CurrentCellChanged" RowEditEnding="DgList_RowEditEnding"/>
    </Grid>
</Window>
