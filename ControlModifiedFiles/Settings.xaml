<Window x:Class="ControlModifiedFiles.Settings" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:ControlModifiedFiles" mc:Ignorable="d"
        Title="Settings" Height="110" Width="290">
    <Grid >
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem x:Name="miSave" Header="Сохранить и закрыть" Click="MiSave_Click"/>
            <MenuItem x:Name="miClose" Header="Закрыть без сохранения" Click="MiClose_Click"/>
        </Menu>
        <WrapPanel Margin="0,22,0,0" >
            <WrapPanel>
                <Label Content="Каталог логов:"/>
                <TextBox x:Name="txtDirectoryCache" Width="185"/>
            </WrapPanel>
            <WrapPanel>
                <Label Content="Автозагрузка списка подключенных файлов:"/>
                <CheckBox x:Name="cboxAutoload" VerticalAlignment="Center"/>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</Window>
